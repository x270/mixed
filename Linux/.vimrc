syntax on
colorscheme molokai
set t_Co=256

set encoding=utf-8
set fileencoding=utf-8
set fileencodings=utf-8,iso-2022-jp,euc-jp,sjis
set nobackup
set noswapfile

set title
set showmode
set number
set hidden
set virtualedit=onemore
set laststatus=2

set autoindent
set smartindent
set tabstop=2
set shiftwidth=2

set showmatch
set wrapscan
set incsearch
set ignorecase
set smartcase
set hlsearch
nmap <Esc><Esc> :nohlsearch<CR><Esc>
set whichwrap=b,s,<,>,[,]
set wildmode=longest,full
